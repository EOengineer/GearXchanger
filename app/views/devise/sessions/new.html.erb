<div class="row">
  <div class="form-inputs small-8 small-centered columns">
    <h2 class="white">Sign in</h2>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="form-inputs small-8 small-centered columns">
    <div class="form-inputs">
      <%= f.input :email, required: true, label_html: { class: 'white' } %>
      <%= f.input :password, required: true, label_html: { class: 'white' } %>
      <%= f.input :remember_me, label_html: { class: 'white' }, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>
</div>

<div class="row">
  <div class="form-inputs small-8 small-centered columns">
    <div class="form-actions">
      <%= f.button :submit, "Sign in", class: "button" %>
    </div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
