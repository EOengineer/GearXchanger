<div class="row">
  <div class="form-inputs small-8 small-centered columns">
    <h2>Sign up</h2>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<div class="row">
  <div class="form-inputs small-8 small-centered columns">
    <%= f.input :first_name, required: true, autofocus: true, label_html: { class: 'white' } %>
    <%= f.input :last_name, required: true, label_html: { class: 'white' } %>
    <%= f.input :email, required: true, label_html: { class: 'white' } %>
    <%= f.input :password, required: true, label_html: { class: 'white' } %>
    <%= f.input :password_confirmation, required: true, label_html: { class: 'white' } %>
  </div>
</div>

  <div class="row">
  <div class="form-actions small-8 small-centered columns">
    <%= f.button :submit, "Sign up", class: "button" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
